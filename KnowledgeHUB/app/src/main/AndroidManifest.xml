<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.study.quizzler">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizzler"
        tools:targetApi="31">

        <activity
            android:name="com.study.quizzler.activities.AboutUs"
            android:exported="false" />
        <activity
            android:name="com.study.quizzler.activities.History"
            android:exported="false" />
        <activity
            android:name="com.study.quizzler.activities.SettingsPage"
            android:exported="false" />
        <activity
            android:name="com.study.quizzler.activities.SignUpPage"
            android:exported="false" />
        <activity
            android:name="com.study.quizzler.activities.SignInPage"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>